{
  "name": "mix-me",
  "version": "1.0.0",
  "engines": {
    "node": "14.x"
  },
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "tsc": "tsc",
    "lint": "eslint '**/*.{ts,tsx}' --max-warnings 0",
    "test": "jest --collectCoverage --errorOnDeprecated",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "expo": "^46.0.0",
    "expo-status-bar": "~1.4.0",
    "expo-updates": "~0.14.4",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-native": "0.69.4",
    "react-native-safe-area-context": "4.3.1",
    "react-native-web": "~0.18.7"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@testing-library/jest-native": "^4.0.9",
    "@testing-library/react-native": "^11.0.0",
    "@types/jest": "^28.1.6",
    "@types/react": "~18.0.0",
    "@types/react-native": "~0.69.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "jest": "^26.6.3",
    "jest-expo": "^46.0.0",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.6.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": ["<rootDir>/spec/setup-jest.ts"],
    "collectCoverageFrom": ["src/**/*.{ts,tsx}"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "private": true
}
